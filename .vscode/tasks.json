  "version": "2.0.0",
  "tasks": [
    {
      "label": "test 100.000",
      "type": "shell",
      "command": "go test ./... -rapid.checks=100000"
    },
    {
      "label": "test 1.000",
      "type": "shell",
      "command": "go test ./... -rapid.checks=1000"
    },
    {
      "label": "fmt",
      "type": "shell",
      "command": "go fmt ./..."
    },
    {
      "label": "dry run",
      "type": "shell",
      "command": "sudo go run cmd/nixos-go-up/nixos-go-up.go -dry-run",
      "presentation": {
        "focus": true,
      }
    },
    {
      "label": "to script",
      "type": "shell",
      "command": "sudo go run cmd/nixos-go-up/nixos-go-up.go -to-script"
    }
  ]
}